# Prism Analytics Engine - Environment Configuration Template
# Copy this file to .env and configure your values

# ===============================================
# FLASK APPLICATION SETTINGS
# ===============================================

# Secret key for Flask sessions (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production-32-chars-minimum

# Application environment
FLASK_ENV=development
FLASK_DEBUG=true

# Server configuration
HOST=0.0.0.0
PORT=5000

# ===============================================
# DATABASE CONFIGURATION
# ===============================================

# SQLite (Development) - Default
DATABASE_URL=sqlite:///data/precise_leads.db

# PostgreSQL (Production) - Uncomment and configure for production
# DATABASE_URL=postgresql://username:password@localhost:5432/precise_leads

# Database options
DATABASE_ECHO=false

# ===============================================
# API INTEGRATIONS
# ===============================================

# Spotify Web API (Required for Spotify integration)
# Get credentials from: https://developer.spotify.com/dashboard/applications
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# YouTube Data API v3 (Recommended for YouTube integration)
# Get API key from: https://console.developers.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# Last.fm API (Optional for social listening data)
# Get API key from: https://www.last.fm/api/account/create
LASTFM_API_KEY=your_lastfm_api_key_here

# ===============================================
# BUSINESS CONFIGURATION
# ===============================================

# Contact information
CONTACT_EMAIL=contact@precise.digital

# Processing limits
MAX_BULK_ISRCS=1000
REQUEST_TIMEOUT=30

# Geographic targeting (comma-separated country codes)
TARGET_COUNTRIES=NZ,AU,FJ,PG,SB,VU,NC,PF,WS,TO

# ===============================================
# CORS AND SECURITY
# ===============================================

# CORS origins for frontend integration (comma-separated)
# Development: Leave empty or set to '*'
# Production: Set to your frontend domain(s)
CORS_ORIGINS=https://your-frontend-domain.com,https://your-admin-panel.com

# Additional security headers
SECURE_HEADERS=true

# ===============================================
# DEPLOYMENT SETTINGS
# ===============================================

# Deployment platform flags
RENDER=false
HEROKU=false
VERCEL=false
PRODUCTION=false

# Production database (if different from main DATABASE_URL)
# PRODUCTION_DATABASE_URL=postgresql://user:pass@prod-db:5432/precise_leads

# ===============================================
# LOGGING AND MONITORING
# ===============================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (leave empty to disable file logging)
LOG_FILE=logs/precise_digital.log

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===============================================
# PERFORMANCE SETTINGS
# ===============================================

# Rate limiting settings
ENABLE_RATE_LIMITING=true
RATE_LIMIT_STORAGE=memory

# Caching settings
ENABLE_CACHING=true
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Worker settings for production
WORKERS=4
WORKER_CLASS=sync
WORKER_TIMEOUT=120

# ===============================================
# FEATURE FLAGS
# ===============================================

# Export features
ENABLE_PDF_EXPORT=true
ENABLE_EXCEL_EXPORT=true
ENABLE_BULK_EXPORT=true

# Integration features
ENABLE_YOUTUBE_INTEGRATION=true
ENABLE_CONTACT_DISCOVERY=true
ENABLE_SOCIAL_SCRAPING=false

# Analytics features
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_DASHBOARD_STATS=true
ENABLE_LEAD_SCORING=true

# Development features
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_TEST_DATA=false

# ===============================================
# EXTERNAL SERVICES (OPTIONAL)
# ===============================================

# Email service for notifications (optional)
# SENDGRID_API_KEY=your_sendgrid_api_key
# EMAIL_FROM=noreply@precise.digital

# Cloud storage for exports (optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=precise-digital-exports

# Redis for caching and queues (optional)
# REDIS_URL=redis://localhost:6379/0

# ===============================================
# PRISM ANALYTICS BRANDING
# ===============================================

# Company information
COMPANY_NAME=Precise Digital
ANALYTICS_ENGINE_NAME=Prism Analytics Engine
COMPANY_TAGLINE=Transforming Music Data into Actionable Insights

# Brand colors (hex codes)
PRIMARY_COLOR=#1A1A1A
ACCENT_COLOR=#E50914
SECONDARY_COLOR=#333333

# Contact and support
SUPPORT_EMAIL=support@precise.digital
WEBSITE_URL=https://precise.digital

# ===============================================
# DEVELOPMENT SETTINGS
# ===============================================

# Development database (for testing)
# DEV_DATABASE_URL=sqlite:///data/precise_leads_dev.db

# Test API keys (for development/testing)
# TEST_SPOTIFY_CLIENT_ID=test_client_id
# TEST_YOUTUBE_API_KEY=test_api_key

# Debug settings
FLASK_DEBUG_TB_ENABLED=false
DEBUG_API_CALLS=false
DEBUG_RATE_LIMITING=false

# ===============================================
# DOCKER SETTINGS (for containerized deployment)
# ===============================================

# Database settings for Docker
# POSTGRES_DB=precise_leads
# POSTGRES_USER=precise_user
# POSTGRES_PASSWORD=your_secure_password
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432

# Redis settings for Docker
# REDIS_HOST=redis
# REDIS_PORT=6379

# ===============================================
# MONITORING AND HEALTH CHECKS
# ===============================================

# Health check settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/api/health

# Metrics collection
ENABLE_METRICS=false
METRICS_ENDPOINT=/metrics

# Performance monitoring
ENABLE_PROFILING=false
PROFILE_DIR=profiles

# ===============================================
# BACKUP AND DATA RETENTION
# ===============================================

# Data retention (days)
LOG_RETENTION_DAYS=90
PROCESSING_LOG_RETENTION_DAYS=30
EXPORT_RETENTION_DAYS=7

# Backup settings
ENABLE_AUTOMATED_BACKUPS=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# ===============================================
# ADVANCED CONFIGURATION
# ===============================================

# Custom API endpoints
# CUSTOM_MUSICBRAINZ_URL=https://musicbrainz.org/ws/2/
# CUSTOM_SPOTIFY_URL=https://api.spotify.com/v1/

# Machine learning features (future)
ENABLE_ML_FEATURES=false
ML_MODEL_PATH=models/

# A/B testing
ENABLE_AB_TESTING=false
AB_TEST_PERCENTAGE=10

# ===============================================
# NOTES AND DOCUMENTATION
# ===============================================

# API Rate Limits (for reference):
# - MusicBrainz: 1 request per second (be respectful)
# - Spotify: 100 requests per minute
# - YouTube: 10,000 quota units per day
# - Last.fm: 5 requests per second

# Required Permissions:
# - Spotify: No special permissions (public data only)
# - YouTube: YouTube Data API v3 enabled
# - Last.fm: API account required

# Security Notes:
# - Always use HTTPS in production
# - Keep API keys secure and rotate regularly
# - Use strong SECRET_KEY (32+ characters)
# - Enable CORS only for trusted domains
# - Monitor API usage to avoid rate limiting

# Performance Notes:
# - SQLite is suitable for development and small deployments
# - Use PostgreSQL for production with multiple users
# - Enable caching for better performance
# - Consider Redis for session storage in production

# Deployment Notes:
# - Set PRODUCTION=true for production deployments
# - Configure proper logging and monitoring
# - Use environment-specific settings
# - Enable automated backups
# - Set up health checks for uptime monitoring