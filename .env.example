# Prism Analytics Engine - Environment Configuration Template
# Copy this file to .env and configure your values

# ===============================================
# FLASK APPLICATION SETTINGS
# ===============================================

# Secret key for Flask sessions (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production-32-chars-minimum

# Application environment
FLASK_ENV=development
FLASK_DEBUG=true

# Server configuration
HOST=0.0.0.0
PORT=5000
GLOBAL_RATE_LIMIT=60

# ===============================================
# DATABASE CONFIGURATION
# ===============================================

# SQLite (Development) - Default
DATABASE_URL=sqlite:///data/precise_leads.db

# PostgreSQL (Production) - Uncomment and configure for production
# DATABASE_URL=postgresql://username:password@localhost:5432/precise_leads

# Database options
DATABASE_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DATABASE_TIMEOUT=20

# ===============================================
# CORE API INTEGRATIONS
# ===============================================

# Spotify Web API (Required for Spotify integration)
# Get credentials from: https://developer.spotify.com/dashboard/applications
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# YouTube Data API v3 (Recommended for YouTube integration)
# Get API key from: https://console.developers.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# Last.fm API (Optional for social listening data)
# Get API key from: https://www.last.fm/api/account/create
LASTFM_API_KEY=your_lastfm_api_key_here
LASTFM_SHARED_SECRET=your_lastfm_shared_secret_here

# ===============================================
# ENHANCED LYRICS & METADATA APIs (OPTIONAL)
# ===============================================

# Genius API (for comprehensive lyrics and song information)
# Get API key from: https://genius.com/api-clients
# Create API client and copy the "Client Access Token"
GENIUS_API_KEY=your_genius_api_key_here

# Musixmatch API (for lyrics with translations and enhanced metadata)
# Get API key from: https://developer.musixmatch.com/
# Sign up for developer account and create an app
MUSIXMATCH_API_KEY=your_musixmatch_api_key_here

# LyricFind API (commercial lyrics provider - enterprise only)
# Contact LyricFind directly for enterprise access
# LYRICFIND_API_KEY=your_lyricfind_api_key_here

# Discogs API (for detailed release information and credits)
# Get API key from: https://www.discogs.com/settings/developers
# DISCOGS_API_KEY=your_discogs_api_key_here

# ===============================================
# RATE LIMITING CONFIGURATION
# ===============================================

# Core APIs
MUSICBRAINZ_RATE_LIMIT=50
SPOTIFY_RATE_LIMIT=100
LASTFM_RATE_LIMIT=250
YOUTUBE_DAILY_QUOTA=10000
YOUTUBE_SEARCH_QUOTA_COST=100
YOUTUBE_DETAILS_QUOTA_COST=1

# Enhanced APIs (when enabled)
GENIUS_RATE_LIMIT_MINUTE=100
GENIUS_RATE_LIMIT_HOUR=1000
MUSIXMATCH_RATE_LIMIT_MINUTE=20
MUSIXMATCH_RATE_LIMIT_HOUR=1000
DISCOGS_RATE_LIMIT_MINUTE=60

# ===============================================
# ENHANCED FEATURES CONFIGURATION
# ===============================================

# Enhanced track metadata collection
ENABLE_ENHANCED_METADATA=true
ENABLE_LYRICS_COLLECTION=true
ENABLE_CREDITS_COLLECTION=true
ENABLE_TECHNICAL_ANALYSIS=true
ENABLE_RIGHTS_INFORMATION=true

# Enhanced analysis options
ENHANCED_METADATA_TIMEOUT=30
LYRICS_COLLECTION_TIMEOUT=15
CREDITS_COLLECTION_TIMEOUT=20

# ===============================================
# BUSINESS CONFIGURATION
# ===============================================

# Contact information
CONTACT_EMAIL=contact@precise.digital

# Processing limits
MAX_BULK_ISRCS=1000
DEFAULT_BATCH_SIZE=10
MAX_RETRY_ATTEMPTS=3
BATCH_DELAY_SECONDS=1
ERROR_RETRY_DELAY=5
REQUEST_TIMEOUT=30

# Geographic targeting (comma-separated country codes)
TARGET_COUNTRIES=NZ,AU,FJ,PG,SB,VU,NC,PF,WS,TO
TARGET_REGIONS=new_zealand,australia,pacific_islands

# ===============================================
# LEAD SCORING CONFIGURATION
# ===============================================

INDEPENDENCE_WEIGHT=0.4
OPPORTUNITY_WEIGHT=0.4
GEOGRAPHIC_WEIGHT=0.2
MIN_SCORE_TIER_A=80
MIN_SCORE_TIER_B=60
MIN_SCORE_TIER_C=40

# ===============================================
# YOUTUBE INTEGRATION SETTINGS
# ===============================================

YOUTUBE_SEARCH_MAX_RESULTS=10
YOUTUBE_CHANNEL_MIN_SUBSCRIBERS=100
YOUTUBE_UNDERPERFORMING_RATIO=0.1
YOUTUBE_HIGH_POTENTIAL_THRESHOLD=10000

# ===============================================
# CORS AND SECURITY
# ===============================================

# CORS origins for frontend integration (comma-separated)
# Development: Leave empty or set to '*'
# Production: Set to your frontend domain(s)
CORS_ORIGINS=https://your-frontend-domain.com,https://your-admin-panel.com

# Additional security headers
SECURE_HEADERS=true
ENABLE_HTTPS=true

# ===============================================
# LOGGING AND MONITORING
# ===============================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (leave empty to disable file logging)
LOG_FILE=logs/precise_digital.log

# API and processing logging
LOG_API_REQUESTS=true
LOG_RATE_LIMITING=true
LOG_DATABASE_QUERIES=false

# Health monitoring
DATABASE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL=30

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===============================================
# PERFORMANCE & CACHING SETTINGS
# ===============================================

# Rate limiting settings
ENABLE_RATE_LIMITING=true
RATE_LIMIT_STORAGE=memory

# Caching settings
ENABLE_CACHING=true
ENABLE_RESULT_CACHING=true
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300
CACHE_EXPIRY_HOURS=24

# Request settings
API_REQUEST_TIMEOUT=30

# Worker settings for production
WORKERS=4
WORKER_CLASS=sync
WORKER_TIMEOUT=120

# ===============================================
# FEATURE FLAGS
# ===============================================

# Core features
ENABLE_BULK_PROCESSING=true
ENABLE_EXPORT_FEATURES=true
ENABLE_CONTACT_DISCOVERY=true

# Export features
ENABLE_PDF_EXPORT=true
ENABLE_EXCEL_EXPORT=true
ENABLE_BULK_EXPORT=true

# Integration features
ENABLE_YOUTUBE_INTEGRATION=true
ENABLE_SOCIAL_SCRAPING=false

# Analytics features
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_DASHBOARD_STATS=true
ENABLE_LEAD_SCORING=true

# Development features
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_TEST_DATA=false

# ===============================================
# FRONTEND CONFIGURATION
# ===============================================

# Frontend API configuration
REACT_APP_API_BASE_URL=http://localhost:5000/api
REACT_APP_VERSION=1.0.0
REACT_APP_PRISM_ENVIRONMENT=development
REACT_APP_COMPANY_NAME=Precise Digital
REACT_APP_APP_NAME=Prism Analytics Engine

# Feature flags for frontend
REACT_APP_ENABLE_YOUTUBE_INTEGRATION=true
REACT_APP_ENABLE_BULK_PROCESSING=true
REACT_APP_ENABLE_EXPORT_FEATURES=true
REACT_APP_ENABLE_ENHANCED_ANALYSIS=true

# Frontend branding
REACT_APP_BRAND_PRIMARY_COLOR=#1A1A1A
REACT_APP_BRAND_ACCENT_COLOR=#E50914
REACT_APP_BRAND_COMPANY_URL=https://precise.digital

# Frontend debugging
REACT_APP_DEBUG=false
REACT_APP_LOG_LEVEL=error
REACT_APP_MOCK_API_RESPONSES=false

# ===============================================
# DEPLOYMENT SETTINGS
# ===============================================

# Deployment platform flags
