# .env.example - Complete configuration with YouTube integration
# Copy this file to .env and fill in your API keys

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///data/leads.db

# For PostgreSQL (uncomment and configure if using PostgreSQL):
# DATABASE_URL=postgresql://username:password@localhost:5432/precise_digital_leads

# For MySQL (uncomment and configure if using MySQL):
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/precise_digital_leads

# Database debugging (set to true to see SQL queries in logs)
DATABASE_ECHO=false

# =============================================================================
# SPOTIFY API CREDENTIALS (REQUIRED)
# =============================================================================
# Get these from https://developer.spotify.com/dashboard/
# 1. Create a new app
# 2. Copy Client ID and Client Secret
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# =============================================================================
# YOUTUBE API CREDENTIALS (REQUIRED FOR YOUTUBE INTEGRATION)
# =============================================================================
# Get from https://console.developers.google.com/
# 1. Create a new project or select existing
# 2. Enable "YouTube Data API v3"
# 3. Create credentials (API Key)
# 4. Restrict the key to YouTube Data API v3 for security
YOUTUBE_API_KEY=your_youtube_api_key_here

# YouTube API quotas (for monitoring - these are Google's default limits)
YOUTUBE_DAILY_QUOTA=10000
YOUTUBE_REQUESTS_PER_MINUTE=100

# =============================================================================
# LAST.FM API KEY (OPTIONAL BUT RECOMMENDED)
# =============================================================================
# Get from https://www.last.fm/api/account/create
# Provides social listening data and improves lead scoring
LASTFM_API_KEY=your_lastfm_api_key_here

# =============================================================================
# FLASK APPLICATION CONFIGURATION
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Secret key for session management (change this in production!)
SECRET_KEY=your-secret-key-change-this-in-production-to-something-random-and-secure

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL - FOR RATE LIMITING)
# =============================================================================
# Redis is used for advanced rate limiting across multiple processes
# If not configured, in-memory rate limiting will be used
REDIS_URL=redis://localhost:6379/0

# Redis connection settings (if using remote Redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=your_redis_password

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Override default rate limits (optional)
# Format: requests_per_minute
MUSICBRAINZ_RATE_LIMIT=60
SPOTIFY_RATE_LIMIT=100
LASTFM_RATE_LIMIT=300
YOUTUBE_RATE_LIMIT=100

# =============================================================================
# CONTACT DISCOVERY SETTINGS
# =============================================================================
# Email for User-Agent headers (required by some APIs)
CONTACT_EMAIL=contact@precise.digital

# Web scraping settings
SCRAPING_DELAY=2  # Seconds between website requests
SCRAPING_TIMEOUT=10  # Timeout for web requests

# =============================================================================
# LEAD SCORING CONFIGURATION
# =============================================================================
# Adjust scoring weights (optional)
INDEPENDENCE_WEIGHT=0.4
OPPORTUNITY_WEIGHT=0.4  # Includes YouTube opportunities
GEOGRAPHIC_WEIGHT=0.2

# YouTube opportunity scoring weights
YOUTUBE_NO_PRESENCE_POINTS=15
YOUTUBE_UNDERPERFORMING_POINTS=5
YOUTUBE_LOW_UPLOAD_FREQUENCY_POINTS=5

# =============================================================================
# BULK PROCESSING LIMITS
# =============================================================================
MAX_BULK_ISRCS=1000
DEFAULT_BATCH_SIZE=10
MAX_RETRY_ATTEMPTS=3

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/precise_digital.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Enable detailed API logging (set to true for debugging)
LOG_API_REQUESTS=false
LOG_API_RESPONSES=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Cache settings
ENABLE_CACHING=true
CACHE_DURATION=3600  # 1 hour

# =============================================================================
# YOUTUBE INTEGRATION SETTINGS
# =============================================================================
# YouTube search and analysis settings
YOUTUBE_MAX_VIDEOS_PER_ARTIST=10
YOUTUBE_MAX_CHANNELS_PER_SEARCH=5

# YouTube opportunity detection thresholds
YOUTUBE_UNDERPERFORMANCE_RATIO=0.3  # YouTube subs < 30% of Spotify followers
YOUTUBE_MIN_FOLLOWERS_FOR_OPPORTUNITY=10000  # Minimum Spotify followers to flag YouTube opportunity

# YouTube data freshness (hours)
YOUTUBE_DATA_REFRESH_INTERVAL=24

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# API security
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# EXPORT SETTINGS
# =============================================================================
# CSV export limits
MAX_EXPORT_RECORDS=10000
EXPORT_INCLUDE_YOUTUBE_DATA=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable development features
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_TEST_DATA=false

# Mock API responses for testing (when API keys not available)
MOCK_SPOTIFY_RESPONSES=false
MOCK_YOUTUBE_RESPONSES=false
MOCK_LASTFM_RESPONSES=false

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
# Enable application monitoring
ENABLE_METRICS=false
METRICS_PORT=9090

# Health check settings
HEALTH_CHECK_INTERVAL=300  # 5 minutes

# =============================================================================
# NOTIFICATION SETTINGS (OPTIONAL)
# =============================================================================
# Email notifications for system events
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=admin@precise.digital

# Slack notifications (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Set these when deploying to production
# FLASK_ENV=production
# FLASK_DEBUG=false
# SECRET_KEY=very-long-random-string-for-production
# DATABASE_URL=postgresql://user:pass@production-db:5432/precise_digital

# Production server settings
# WORKERS=4
# TIMEOUT=30
# KEEP_ALIVE=65

# =============================================================================
# USAGE EXAMPLES
# =============================================================================
# Example .env for local development:
# DATABASE_URL=sqlite:///data/leads.db
# SPOTIFY_CLIENT_ID=abc123...
# SPOTIFY_CLIENT_SECRET=def456...
# YOUTUBE_API_KEY=ghi789...
# LASTFM_API_KEY=jkl012...
# FLASK_DEBUG=true
# SECRET_KEY=dev-secret-key

# Example .env for production:
# DATABASE_URL=postgresql://user:pass@db:5432/precise_digital
# SPOTIFY_CLIENT_ID=abc123...
# SPOTIFY_CLIENT_SECRET=def456...
# YOUTUBE_API_KEY=ghi789...
# FLASK_ENV=production
# FLASK_DEBUG=false
# SECRET_KEY=super-secure-random-production-key
# REDIS_URL=redis://redis:6379/0