# .env.example
# Copy this file to .env and fill in your API keys

# Database Configuration
DATABASE_URL=sqlite:///data/leads.db

# Spotify API Credentials (Required)
# Get these from https://developer.spotify.com/dashboard/
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Last.fm API Key (Optional but recommended)
# Get from https://www.last.fm/api/account/create
LASTFM_API_KEY=your_lastfm_api_key_here

# YouTube Data API Key (Optional but recommended for video analytics)
# Get from https://console.developers.google.com/
# Enable "YouTube Data API v3" in your project
YOUTUBE_API_KEY=your_youtube_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=your-secret-key-change-this-in-production

# Redis Configuration (for rate limiting)
REDIS_URL=redis://localhost:6379/0

# Optional: Database echo (set to true for SQL query logging)
DATABASE_ECHO=false

# Contact Email (used in User-Agent headers for APIs)
CONTACT_EMAIL=contact@precise.digital